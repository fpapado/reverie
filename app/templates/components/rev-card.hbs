{{#if title}}
  <span class="db mt2 mb4 f3 f2-ns fw4 tc black-80 lh-title baskerville">
    {{title}}
  </span>
{{/if}}
<div class="center">
  {{yield}}

  {{#if attrs.task}}
    {{#rev-task-button
      isDisabled=buttonDisabled
      task=attrs.task
      text=buttonText}}
    {{/rev-task-button}}
  {{else}}
    {{#if attrs.onsubmit}}
      {{#rev-action-button
        isDisabled=buttonDisabled
        action=attrs.onsubmit}}
        {{buttonText}}
      {{/rev-action-button}}
    {{/if}}
  {{/if}}
</div>
