<h2 class="mt0 mb4 f2 fw4 tc black-80 lh-title baskerville">{{title}}</h2>

<ul class="list ph0">
  {{#each notes as |note|}}
    <article class="mb4 note">
      <h3 class="f3 fw5 mt0 mb2 lh-title note-title baskerville">{{note.title}}</h3>
      <div class="f5 mb2 lh-copy note-content">
        {{note.content}}
      </div>
      <div class="f6 note-author">
        <span>by</span> {{note.author}}
      </div>
      <div class="f6 note-category">
        <span>category:</span> {{note.category}}
      </div>
    </article>
  {{/each}}
</ul>
