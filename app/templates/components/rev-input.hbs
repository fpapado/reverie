<label class="db mb2 f6 b"
  data-error={{_errorMessages}}>
  {{label}}{{yield}}
</label>
<span>{{errors}}</span>
<input type="{{type}}"
  value="{{value}}"
  class="{{if value
    (concat
      "validate "
      (if errors.length "invalid" "valid")
      )
    }}
    input-reset db mb2 pa2 w-100 ba b--black-20"
  onkeyup={{action (mut value) value='target.value'}}
  onchange={{action (mut value) value='target.value'}}>
