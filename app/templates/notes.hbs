<!-- app/templates/notes/new.hbs -->
<div class="col-md-3">
 <h2>New Note</h2>
 <form {{action "createNote" on="submit"}}>
   <div class="form-group">
     <label>Title</label>
     {{input value=note-title class="form-control"}}
   </div>
   <div class="form-group">
     <label>Author</label>
     {{input value=note-author class="form-control"}}
   </div>
   <div class="form-group">
     <label>Category</label>
     {{input value=note-category class="form-control"}}
   </div>
   <div class="form-group">
     <label>Content</label>
     {{input value=note-content class="form-control"}}
   </div>
   <input type="submit" value="Add Note" class="btn btn-primary">
 </form>
</div>
{{notes-list title="My Notes" notes=model}}
{{outlet}}
